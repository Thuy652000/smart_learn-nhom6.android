<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical"
        android:background="@color/picton">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_username"
                    android:textColor="@color/color1"
                    android:textStyle="bold"
                    android:textSize="@dimen/margin_basex6"
                    android:layout_marginTop="@dimen/margin_basex4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/iv_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/ic_app"
                    android:layout_marginTop="@dimen/margin_basex4"
                    app:layout_constraintTop_toBottomOf="@id/tv_username"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_basex4"
               android:layout_marginRight="@dimen/margin_basex2"
                android:layout_marginBottom="@dimen/margin_basex2"
                android:layout_weight="1"
                android:text="Edit"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@color/color1"
                android:textColor="@color/color2"/>
            <Button
                android:id="@+id/btn_log_out"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_basex2"
                android:layout_marginRight="@dimen/margin_basex4"
                android:layout_marginBottom="@dimen/margin_basex2"
                android:layout_weight="1"
                android:text="Log out"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="@color/color1"
                android:textColor="@color/color2"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <ImageView
            android:id="@+id/iv_username"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_username2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_username2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_username"/>

        <View
            android:id="@+id/v_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_margin="@dimen/margin_basex2"
            app:layout_constraintTop_toBottomOf="@id/iv_username"
            />
        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_email2"
            app:layout_constraintTop_toBottomOf="@id/v_1"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="@id/iv_email"
            app:layout_constraintBottom_toBottomOf="@id/iv_email"
            app:layout_constraintStart_toEndOf="@id/iv_email"/>

        <View
            android:id="@+id/v_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_margin="@dimen/margin_basex2"
            app:layout_constraintTop_toBottomOf="@id/iv_email"
            />
        <ImageView
            android:id="@+id/iv_date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_date_of_birth2"
            app:layout_constraintTop_toBottomOf="@id/v_2"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_date_of_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="@id/iv_date_of_birth"
            app:layout_constraintBottom_toBottomOf="@id/iv_date_of_birth"
            app:layout_constraintStart_toEndOf="@id/iv_date_of_birth"/>

        <View
            android:id="@+id/v_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_margin="@dimen/margin_basex2"
            app:layout_constraintTop_toBottomOf="@id/iv_date_of_birth"
            />
        <ImageView
            android:id="@+id/iv_score"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_score2"
            app:layout_constraintTop_toBottomOf="@id/v_3"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toTopOf="@id/iv_score"
            app:layout_constraintBottom_toBottomOf="@id/iv_score"
            app:layout_constraintStart_toEndOf="@id/iv_score"/>
        <View
            android:id="@+id/v_4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_margin="@dimen/margin_basex2"
            app:layout_constraintTop_toBottomOf="@id/iv_score"
            />

        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Reset password   "
            android:textColor="@color/color1"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/v_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_basex4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>