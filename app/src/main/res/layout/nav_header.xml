<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="top"
    android:background="@color/picton"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/iv_nav_userphoto"
        android:layout_marginTop="@dimen/margin_basex6"
        android:layout_width="92dp"
        android:layout_height="81dp"
        android:src="@drawable/ic_app" />

    <TextView
        android:id="@+id/tv_nav_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_basex2"
        android:layout_marginTop="@dimen/margin_base"
        android:textSize="@dimen/text_small"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv_nav_header_email"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_basex2"
        android:layout_height="wrap_content" />


</LinearLayout>